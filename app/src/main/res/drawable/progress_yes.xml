<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#0672FC"
                android:centerColor="#0672FC"
                android:centerY="0.75"
                android:endColor="#0672FC"
                android:angle="270"
                />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:topLeftRadius="@dimen/dp_5" android:bottomLeftRadius="@dimen/dp_5" android:topRightRadius="@dimen/dp_5" android:bottomRightRadius="@dimen/dp_5" />
                <gradient
                    android:startColor="#67C8E3"
                    android:centerColor="#67C8E3"
                    android:centerY="0.75"
                    android:endColor="#67C8E3"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:topLeftRadius="@dimen/dp_5" android:bottomLeftRadius="@dimen/dp_5" android:topRightRadius="@dimen/dp_5" android:bottomRightRadius="@dimen/dp_5" />
                <gradient
                    android:startColor="#67C8E3"
                    android:centerColor="#67C8E3"
                    android:centerY="0.75"
                    android:endColor="#67C8E3"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

</layer-list>