<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.DetailActivity">

    <ScrollView
        android:layout_above="@id/detail_ll"
        android:id="@+id/detail_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <android.support.v7.widget.Toolbar
               android:paddingTop="@dimen/dp_30"
               android:id="@+id/detail_tbr"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/toolbar"
               android:minHeight="?android:attr/actionBarSize">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/back"
                       android:padding="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/back" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:text="兼职详情"
                       android:textSize="@dimen/sp_18"
                       android:textStyle="bold" />

                   <ImageView
                       android:id="@+id/collect"
                       android:src="@mipmap/collect"
                       android:paddingTop="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_toLeftOf="@id/complain" />

                   <ImageView
                       android:id="@+id/complain"
                       android:src="@mipmap/report"
                       android:padding="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_marginLeft="@dimen/dp_10"
                       android:layout_marginRight="@dimen/dp_10" />
               </RelativeLayout>
           </android.support.v7.widget.Toolbar>

           <LinearLayout
               android:orientation="vertical"
               android:padding="@dimen/dp_10"
               android:layout_below="@id/detail_tbr"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@drawable/write_round_background"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="0dp"
                   android:orientation="vertical"
                   android:padding="@dimen/dp_10">

                   <TextView
                       android:id="@+id/number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="信息编号：1234567898" />

                   <TextView
                       android:id="@+id/job_name"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="APP体验试玩"
                       android:textColor="@color/black_theme"
                       android:textSize="@dimen/sp_18" />

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/job_place"
                           android:drawableLeft="@mipmap/place"
                           android:drawablePadding="@dimen/dp_5"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="白云区 -景山区" />

                       <TextView
                           android:id="@+id/person"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20"
                           android:layout_toRightOf="@id/job_place"
                           android:text="已经141/需1000人" />
                   </RelativeLayout>

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/stop"
                           android:layout_width="wrap_content"
                           android:drawablePadding="@dimen/dp_5"
                           android:drawableLeft="@mipmap/time"
                           android:layout_height="wrap_content"
                           android:text="报名截止：" />

                       <TextView
                           android:id="@+id/stop_time"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="报名截止：2019-04-03    17:00 "
                           android:layout_toRightOf="@id/stop" />
                   </RelativeLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/money"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="30"
                           android:textColor="@color/red_theme"
                           android:textSize="@dimen/sp_21" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="RMD/日结"
                           android:textColor="@color/red_theme" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="集合时间:" />

                       <TextView
                           android:id="@+id/gather_time"
                           android:text="04-03 17:00(周六)"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="集合地点:" />

                       <TextView
                           android:id="@+id/gather_place"
                           android:text="需要报名后才可以查看"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="工作日期:" />

                       <TextView
                           android:id="@+id/work_date"
                           android:text="无需集合无需报名，手机浏览直接打开"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="工作时间:" />

                       <TextView
                           android:id="@+id/work_time"
                           android:text="0:00至23:55（时间根据厂家活动浮动）"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20" />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="工作地点:" />

                       <TextView
                           android:id="@+id/work_place"
                           android:text="不限，手机上随时可做"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="@dimen/dp_20" />
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@mipmap/ok"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="身高不限" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@mipmap/ok"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="身高不限" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@mipmap/ok"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="身高不限" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableLeft="@mipmap/ok"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:text="身高不限" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/describe"
                   android:orientation="vertical"
                   android:background="@drawable/write_round_background"
                   android:padding="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:text="工作描述"
                       android:textColor="@color/black_theme"
                       android:textSize="@dimen/sp_21"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/describe_content"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="该任务,多劳多得,在线完成,在线提交"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/descirbe_one"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="该任务,多劳多得,在线完成,在线提交"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/descirbe_two"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="该任务,多劳多得,在线完成,在线提交"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/descirbe_three"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="该任务,多劳多得,在线完成,在线提交"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/descirbe_four"
                       android:layout_marginTop="@dimen/dp_10"
                       android:text="该任务,多劳多得,在线完成,在线提交"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <RelativeLayout
                   android:padding="@dimen/dp_10"
                   android:background="@drawable/write_round_background"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/company"
                       android:text="公司信息"
                       android:textSize="@dimen/sp_21"
                       android:textColor="@color/black_theme"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />
                   <LinearLayout
                       android:id="@+id/company_content"
                       android:gravity="center"
                       android:layout_below="@id/company"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:id="@+id/company_photo"
                           android:src="@mipmap/ic_launcher"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <RelativeLayout
                           android:layout_weight="1"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <TextView
                               android:id="@+id/company_name"
                               android:text="XXX在线网络科技有限公司"
                               android:textSize="@dimen/sp_14"
                               android:textColor="@color/black_theme"
                               android:layout_marginTop="@dimen/dp_5"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:id="@+id/company_team"
                               android:layout_marginTop="@dimen/dp_5"
                               android:layout_below="@id/company_name"
                               android:background="@drawable/yellow_gradual_round"
                               android:textSize="@dimen/sp_9"
                               android:textColor="@color/write"
                               android:gravity="center"
                               android:text="认证"
                               android:layout_width="@dimen/dp_37"
                               android:layout_height="@dimen/dp_15" />
                           <TextView
                               android:layout_below="@id/company_name"
                               android:layout_toRightOf="@id/company_team"
                               android:layout_marginTop="@dimen/dp_5"
                               android:background="@drawable/green_gradual_round"
                               android:textSize="@dimen/sp_9"
                               android:textColor="@color/write"
                               android:layout_marginLeft="@dimen/dp_10"
                               android:gravity="center"
                               android:text="团队"
                               android:layout_width="@dimen/dp_37"
                               android:layout_height="15dp" />
                       </RelativeLayout>
                       <ImageView
                           android:src="@mipmap/right"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </LinearLayout>
               </RelativeLayout>
           </LinearLayout>
       </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/detail_ll"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:background="@drawable/black_square_frame"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textColor="@color/blue_theme"
            android:drawableStart="@mipmap/service"
            android:textSize="@dimen/sp_18"
            android:text="@string/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/blue_square_background"
            android:text="@string/atonce"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>