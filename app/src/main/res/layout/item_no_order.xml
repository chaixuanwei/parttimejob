<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp_10"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/write_round_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:text="@string/me_issus"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/black_theme"
            android:id="@+id/item_order_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="元/小时"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/red_theme"
            android:id="@+id/item_order_job_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/item_order_job_content"
        android:text="@string/me_issus"
        android:lineSpacingExtra="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingTop="@dimen/dp_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_order_wait_payment"
            android:text="待付款"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/red_theme"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/red_round_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_order_job_look"
            android:text="编辑信息"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_theme_color"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_7"
            android:background="@drawable/blue_round_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
