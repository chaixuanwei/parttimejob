<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/write_background"
    android:padding="@dimen/dp_12"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/project_name"
            android:text="@string/atonce"
            android:textColor="@color/black_theme"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/project_number"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/grey_second"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/atonce"
            android:background="@drawable/semicircle"
            android:gravity="center"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_99"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>
    <TextView
        android:id="@+id/job_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/treatment"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_second"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/company"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
