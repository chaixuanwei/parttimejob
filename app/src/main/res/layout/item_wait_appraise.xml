<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/write_round_background"
    android:layout_margin="@dimen/dp_12"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_135">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/appraise_wait_project_name"
            android:text="@string/atonce_appraise"
            android:textColor="@color/black_theme"
            android:textSize="@dimen/sp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/appraise_wait_project_name"
            android:id="@+id/appraise_wait_project_number"
            android:text="@string/contact"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/grey_second"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/appraise_wait_project_click"
            android:text="@string/atonce_appraise"
            android:background="@drawable/semicircle"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_14"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
    <TextView
        android:id="@+id/appraise_wait_job_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_12"
        android:text="@string/contact"
        android:textColor="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/appraise_wait_treatment"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/grey_second"
        android:text="@string/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/appraise_wait_company"
        android:text="@string/contact"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
