<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:gravity="center"
    tools:context=".activity.SplashActivity">

    <TextView
        android:id="@+id/splash_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/splashone" />

    <TextView
        android:id="@+id/splash_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_one"
        android:layout_margin="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:text="@string/splashtwo" />

    <TextView
        android:id="@+id/splash_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_two"
        android:layout_centerHorizontal="true"
        android:background="@drawable/splash_round"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/splashthree" />

</RelativeLayout>