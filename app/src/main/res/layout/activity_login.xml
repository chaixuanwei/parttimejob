<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_20"
    tools:context=".login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_theme"
            android:layout_marginTop="@dimen/dp_70"
            android:text="欢迎您"
            android:textSize="@dimen/sp_36" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_theme"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="立即登录，更多好工作等你来体验" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="+86"
                android:textColor="@color/black_theme"
                android:textSize="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/grey_second"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_17" />
            <EditText
                android:id="@+id/user_phone"
                android:textSize="@dimen/sp_15"
                android:hint="请输入需要登录的手机号"
                android:layout_marginLeft="@dimen/dp_11"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/grey_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:background="@null"
            android:hint="@string/password" />

        <TextView
            android:layout_marginTop="@dimen/dp_14"
            android:background="@color/grey_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/sp_12"
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"/>

            <TextView
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你还没有账号？" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_theme_color"
                android:layout_toRightOf="@id/none"
                android:text="注册" />
        </LinearLayout>

        <TextView
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/write"
            android:textSize="@dimen/sp_18"
            android:background="@drawable/blue_background"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_15"
            android:text="登录" />

    </LinearLayout>

    <TextView
        android:layout_above="@id/other_login"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center"
        android:textColor="@color/black_theme"
        android:textSize="@dimen/sp_15"
        android:text="第三方登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/other_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weibo" />

        <ImageView
            android:id="@+id/weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/weixin" />

        <ImageView
            android:id="@+id/zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/zhifubao" />
    </LinearLayout>
</RelativeLayout>