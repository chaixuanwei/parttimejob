<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.fragment.FirstFragment">
    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/banner_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_173">
        <android.support.v7.widget.Toolbar
            android:paddingTop="@dimen/dp_30"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="位置" />
                <SearchView
                    android:id="@+id/searchView"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:layout_width="@dimen/dp_201"
                    android:layout_height="@dimen/dp_28"
                    android:background="@drawable/white_background"
                    android:iconifiedByDefault="false"
                    android:queryHint="搜索内容" />
                <ImageView
                    android:id="@+id/first_message"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


        <com.youth.banner.Banner
            android:id="@+id/first_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"></com.youth.banner.Banner>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>