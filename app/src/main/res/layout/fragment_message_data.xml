<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.fragment.SystemMessageFragment">
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/system_message_rv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>-->
    <TextView
        android:id="@+id/system_message"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@mipmap/notification"
        android:gravity="center"
        android:text="系统消息"
        android:textSize="@dimen/sp_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <TextView
        android:id="@+id/task_message"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@mipmap/notification"
        android:gravity="center"
        android:text="任务消息"
        android:textSize="@dimen/sp_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <TextView
        android:id="@+id/affiche_message"
        android:padding="@dimen/dp_10"
        android:drawableLeft="@mipmap/notification"
        android:gravity="center"
        android:text="公告消息"
        android:textSize="@dimen/sp_21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>