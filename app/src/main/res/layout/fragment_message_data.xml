<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.fragment.SystemMessageFragment">
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/system_message_rv"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>-->
    <RelativeLayout
        android:id="@+id/system_rl"
        android:padding="@dimen/dp_13"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sys"
            android:src="@mipmap/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@id/img_sys"
            android:layout_marginLeft="@dimen/dp_13"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="系统消息"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/grey_second"
                android:textSize="@dimen/sp_12"
                android:text="暑假兼职日结200元，是不是惊呆了？"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="前天 15:20"
            android:textColor="@color/grey_second"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <RelativeLayout
        android:id="@+id/task_rl"
        android:padding="@dimen/dp_13"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_task"
            android:src="@mipmap/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@id/img_task"
            android:layout_marginLeft="@dimen/dp_13"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="任务消息"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/grey_second"
                android:textSize="@dimen/sp_12"
                android:text="暑假兼职日结200元，是不是惊呆了？"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="前天 15:20"
            android:textColor="@color/grey_second"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:background="@color/grey_second"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1" />
    <RelativeLayout
        android:id="@+id/affiche_rl"
        android:padding="@dimen/dp_13"
        android:background="@color/write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_affiche"
            android:src="@mipmap/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_toRightOf="@id/img_affiche"
            android:layout_marginLeft="@dimen/dp_13"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="广告消息"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/grey_second"
                android:textSize="@dimen/sp_12"
                android:text="暑假兼职日结200元，是不是惊呆了？"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="前天 15:20"
            android:textColor="@color/grey_second"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>