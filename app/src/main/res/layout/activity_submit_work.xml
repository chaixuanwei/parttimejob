<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.me.activity.SubmitWorkActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/submit_work_tbr"
        android:paddingTop="@dimen/dp_30"
        android:background="@drawable/toolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:padding="@dimen/dp_10"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:text="立即提交"
                android:textColor="@color/write"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView
        android:background="@color/write"
        android:layout_below="@id/submit_work_tbr"
        android:id="@+id/submit_work_rv"
        android:layout_above="@id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/submit"
        android:padding="@dimen/dp_15"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/blue_theme"
        android:background="@drawable/blue_square_frame"
        android:text="立即提交"
        android:textSize="@dimen/sp_18"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
