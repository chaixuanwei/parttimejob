<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".me.activity.InsightsUserActivity">
    <android.support.v7.widget.Toolbar
        android:paddingTop="@dimen/dp_30"
        android:id="@+id/insights_user_tbr"
        android:background="@drawable/toolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back"
                android:padding="@dimen/dp_10"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerInParent="true"
                android:text="待审核"
                android:textColor="@color/write"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:layout_below="@id/insights_user_tbr"
        android:id="@+id/insights_user_tl"
        app:tabIndicatorColor="@color/app_theme_color"
        app:tabSelectedTextColor="@color/app_theme_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/insights_user_tl"
        android:layout_above="@id/insights_user_ll"
        android:id="@+id/insights_user_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/insights_user_ll"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/insights_user_refuse"
            android:layout_weight="1"
            android:background="@drawable/blue_round_frame"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:text="拒绝"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36" />
        <TextView
            android:id="@+id/insights_user_pass"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@drawable/blue_round_frame"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:text="录用"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36" />
    </LinearLayout>
</RelativeLayout>